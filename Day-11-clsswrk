CREATE TABLE `Authors`( author_id INT AUTO_INCREMENT, name_of_author VARCHAR(100), PRIMARY KEY (author_id) );

INSERT INTO authors VALUES ('Tagore'), ('ONV'), ('Leader');

CREATE TABLE `book` (book_id INT AUTO_INCREMENT PRIMARY KEY, title_of_book VARCHAR(100), author_id INT, FOREIGN KEY(author_id) REFERENCES authors(author_id));

INSERT INTO book (title_of_book, author_id) VALUES ('Harry Potter and the Sorcerer''s Stone', 1), ('A Game of Thrones', 2), ('The Murder of Roger Ackroyd', 3);

CREATE INDEX indx ON book (author_id);
